
@{
    ViewBag.Title = "Панель администратора";
}

<h2>Панель администратора</h2>
<hr />
<div class="row content">
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading">Данные о пользователях</div>
            <div class="panel-body">
                <div class="list-group">
                    @Html.ActionLink("Роли", "GetRole", "Admin", new { @class = "list-group-item" })
                    @Html.ActionLink("Пользователи", "GetUser", "Admin", new { @class = "list-group-item" })
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Данные о товарах</div>
            <div class="panel-body">
                <div class="list-group">
                    @Html.ActionLink("Производители", "GetManufacturer", "Admin", new { @class = "list-group-item" })
                    @Html.ActionLink("Статусы", "GetStatusProduct", "Admin", new { @class = "list-group-item" })
                    @Html.ActionLink("Категории", "GetCategory", "Admin", new { @class = "list-group-item" })
                    @Html.ActionLink("Товары", "GetProduct", "Admin", new { @class = "list-group-item" })
                </div>
            </div>
        </div>        
        <div class="panel panel-default">
            <div class="panel-heading">Данные о заказах</div>
            <div class="panel-body">
                <div class="list-group">
                    @Html.ActionLink("Способ оплаты", "GetPaymentMethod", "Admin", new { @class = "list-group-item" })
                    @Html.ActionLink("Статусы", "GetStatusOrder", "Admin", new { @class = "list-group-item" })
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Данные о доставках</div>
            <div class="panel-body">
                <div class="list-group">
                    @Html.ActionLink("Типы", "GetTypeDelivery", "Admin", new { @class = "list-group-item" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="container">
            <h2 class="text-center">Статистика</h2>
            <hr />
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">Заказы</div>
                        <div class="panel-body">
                            <h2 class="pull-left"><span class="glyphicon glyphicon-shopping-cart"></span></h2>
                            <h2 class="pull-right">@Html.Action("SummaryOrders", "Admin")</h2>
                        </div>
                        <div class="panel-footer">@Html.ActionLink("Подробнее", "GetOrder", "Admin")</div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">Продажи</div>
                        <div class="panel-body">
                            <h2 class="pull-left"><span class="glyphicon glyphicon-usd"></span></h2>
                            <h2 class="pull-right">@Html.Action("SummarySales", "Admin")</h2>
                        </div>
                        <div class="panel-footer">@Html.ActionLink("Подробнее", "GetSale", "Admin")</div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">Пользователи</div>
                        <div class="panel-body">
                            <h2 class="pull-left"><span class="glyphicon glyphicon-user"></span></h2>
                            <h2 class="pull-right">@Html.Action("SummaryUsers", "Admin")</h2>
                        </div>
                        <div class="panel-footer">@Html.ActionLink("Подробнее", "GetUserStat", "Admin")</div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
        <div class="container">            
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <a class="btn btn-default btn-lg btn-block" href="@Url.Action("GenerateExcelPrice", "Admin")">Excel-документ с прайсом</a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-default btn-lg btn-block" href="@Url.Action("CreateNews", "Admin")">Создать новость</a>
                </div>                
            </div>
            <hr />
        </div>
    </div>
</div>


