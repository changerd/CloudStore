@model IEnumerable<IBAstore.Models.Category>
@using IBAstore.Models

@{
    ViewBag.Title = "Категории товаров";
}

<h2>Категории товаров</h2>

<p>
    @Html.ActionLink("Создать", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название")
        </th>
        <th>
            @Html.DisplayName("Родительская категория")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentCategory.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditCategory", new { id=item.Id }) |            
            @Html.ActionLink("Удалить", "DeleteCategory", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Назад", "Index")
</div>
