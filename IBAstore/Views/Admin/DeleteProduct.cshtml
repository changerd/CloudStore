@model IBAstore.Models.Product

@{
    ViewBag.Title = "Удаление продукта";
}

<h1>Вы точно хотите удалить товар: <b>@Model.ProductName</b>?</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a class="btn btn-default" href="@Url.Action("GetProduct", "Admin")">Назад</a>
    </div>
}

