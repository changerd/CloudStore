@model IEnumerable<IBAstore.Models.StatusOrder>

@{
    ViewBag.Title = "Статусы заказа";
}

<h2>Статусы заказа</h2>

<p>
    @Html.ActionLink("Создать", "CreateStatusOrder")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>            
            @Html.ActionLink("Delete", "DeleteStatusOrder", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Назад", "Index")
</div>
