@model IBAstore.Models.Product
@using IBAstore.Models

@{
    ViewBag.Title = "DetailsProduct";
}

<h2>Подробнне о товаре</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Название")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayName("Производитель")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        <dt>
            @Html.DisplayName("Категории")
        </dt>
        <dd>
            <ul>
                @foreach (var c in Model.Categories)
                {
                    <li>@c.Name</li>
                }
            </ul>
        </dd>
        <dt>
            @Html.DisplayName("Фото")
        </dt>

        @if (Model.Photo != null)
        {
            <dd>
                @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.Photo) + "\" />")
            </dd>
        }

        <dt>
            @Html.DisplayName("Описание")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayName("Цена")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayName("Статус")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StatusProduct.Name)
        </dd>
        <dt>
            @Html.DisplayName("Количество на складе")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "EditProduct", new { id = Model.Id }) |
    @Html.ActionLink("Назад", "GetProduct")
</p>