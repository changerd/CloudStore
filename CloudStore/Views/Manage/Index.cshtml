@model CloudStore.Models.ApplicationUser
@using CloudStore.Models

@{
    ViewBag.Title = "Profile";
    StoreContext db = new StoreContext();
    var Orders = db.Orders.Where(o => o.Cart.UserId == Model.Id);
}

<h2>Profile</h2>

<div>   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Login")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayName("email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Full name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            @Html.DisplayName("Birth date")
        </dt>

        <dd>            
            @Html.DisplayFor(model => model.Birth)
        </dd>       

        <dt>
            @Html.DisplayName("Phone number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayName("Receive news")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GetNews)
        </dd>
    </dl>
</div>

<h2>Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Order id")
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Orders)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>            
            <td>
                @Html.ActionLink("Details", "DetailOrder", new { id = item.Id })                
            </td>
        </tr>
    }
</table>

<p>    
    @Html.ActionLink("Back", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
    @Html.ActionLink("Profile edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
</p>
