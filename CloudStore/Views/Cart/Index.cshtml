@model CloudStore.Models.CartIndexViewModel

@{
    ViewBag.Title = "Cart";
}

<h2>Корзина</h2>

@if (Model.Cart.Lines.Count == 0)
{
<h4>Your cart is empty. Add the some products to create order.</h4>

    if (Model.ReturnUrl == null)
    {
        <a class="btn btn-dark" href="@Url.Action("Index", "Home")">Back</a>
    }
    else
    {
        <a class="btn btn-dark" href="@Model.ReturnUrl">Back</a>
    }
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Product</th>
                <th class="text-right">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Lines)
            {
                <tr>
                    <td class="text-left">
                        <img class="img-thumbnail" width="75" height="89" src="data:image/jpeg;base64, @Convert.ToBase64String(item.Product.Photo)" />
                    </td>
                    <td class="text-left">@item.Quantity</td>
                    <td class="text-left">@item.Product.ProductName</td>
                    <td class="text-right">@item.Product.Cost.ToString("# $")</td>
                    <td>
                        @using (Html.BeginForm("RemoveFromCart", "Cart"))
                    {
                            @Html.Hidden("Id", item.Id)
                            @Html.HiddenFor(x => x.ReturnUrl)
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-left">Total:</td>
                <td colspan="2" class="text-right">
                    @Model.Lines.Sum(s => s.Product.Cost * s.Quantity).ToString("# $")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        @if (Model.ReturnUrl == null)
        {
            <a class="btn btn-dark" href="@Url.Action("Index", "Home")">Back</a>
        }
        else
        {
            <a class="btn btn-dark" href="@Model.ReturnUrl">Back</a>
        }
        @Html.ActionLink("Checkout", "Checkout", null, new { @class = "btn btn-dark" })
    </div>
}


