@model IEnumerable<CloudStore.Models.Category>
@using CloudStore.Models

@{
    ViewBag.Title = "Product categories";
}

<h2>Product categories</h2>

<p>
    @Html.ActionLink("Create", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Parent category")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentCategory.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.Id }) |            
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back", "Index")
</div>
