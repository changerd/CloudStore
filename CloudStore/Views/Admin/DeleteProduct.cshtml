@model CloudStore.Models.Product

@{
    ViewBag.Title = "Delete product";
}

<h1>Do you want to delete this product: <b>@Model.ProductName</b>?</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" href="@Url.Action("GetProduct", "Admin")">Back</a>
    </div>
}

