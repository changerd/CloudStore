@model CloudStore.Models.Manufacturer

@{
    ViewBag.Title = "Delete manufacturer";
}

<h1>Do you want to delete thismanufacturer: <b>@Model.ManufacturerName</b>?</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" href="@Url.Action("GetManufacturer", "Admin")">Back</a>
    </div>
}

