@model CloudStore.Models.ApplicationUser

@{
    ViewBag.Title = "Delete user";
}

<h1>Do you want to delete this user: <b>@Model.UserName</b>?</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" href="@Url.Action("GetUser", "Admin")">Back</a>
    </div>
}

