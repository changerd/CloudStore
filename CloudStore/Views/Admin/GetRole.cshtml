@model IEnumerable<CloudStore.Models.ApplicationRole>
@using CloudStore.Infastructure
@using CloudStore.Models

@{
    ViewBag.Title = "Роли";
}

<h2>Роли</h2>

<p>
    @Html.ActionLink("Создать новую роль", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Пользователи
        </th>
        <th></th>
    </tr>

@foreach (ApplicationRole item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>        
        <td>              
            @string.Join(", ", item.Users.Select(x => Html.GetUserName(x.UserId)))          
        </td>        
        <td>
            @Html.ActionLink("Присвоить", "GiveRole", new { id = item.Id }) |
            @Html.ActionLink("Редактировать", "EditRole", new { id=item.Id }) |            
            @Html.ActionLink("Удалить", "DeleteRole", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Назад", "Index")
</div>
